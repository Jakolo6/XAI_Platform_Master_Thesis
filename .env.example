# Application Settings
APP_NAME="XAI Finance Benchmark Platform"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# API Settings
API_V1_PREFIX="/api/v1"
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration
DATABASE_URL="postgresql+asyncpg://xai_user:xai_password@localhost:5432/xai_finance_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# JWT Authentication
JWT_SECRET_KEY="your-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Storage Buckets
STORAGE_BUCKET_DATASETS="datasets"
STORAGE_BUCKET_MODELS="models"
STORAGE_BUCKET_EXPLANATIONS="explanations"
STORAGE_BUCKET_REPORTS="reports"

# Kaggle Configuration
KAGGLE_USERNAME="your-kaggle-username"
KAGGLE_KEY="your-kaggle-key"

# Model Training Settings
MAX_TRAINING_TIME_SECONDS=3600
OPTUNA_N_TRIALS=10
OPTUNA_TIMEOUT_SECONDS=1800

# Dataset Settings
MAX_DATASET_SIZE_MB=500
DEFAULT_SAMPLE_SIZE=500000

# XAI Settings
SHAP_MAX_SAMPLES=1000
LIME_NUM_SAMPLES=5000
EXPLANATION_CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Monitoring
SENTRY_DSN=""
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
