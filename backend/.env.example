# ==============================================
# XAI Platform Backend - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Kaggle API Credentials
# Get these from: https://www.kaggle.com/settings
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-key

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=XAI Finance Benchmark Platform
APP_VERSION=1.0.0

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://your-netlify-app.netlify.app"]

# Database (Optional - using Supabase instead)
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/xai_db

# Redis (Optional - for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# JWT Settings
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage Buckets (Supabase)
STORAGE_BUCKET_DATASETS=datasets
STORAGE_BUCKET_MODELS=models
STORAGE_BUCKET_EXPLANATIONS=explanations
STORAGE_BUCKET_REPORTS=reports
